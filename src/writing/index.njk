---
layout: layouts/base.njk
title: Writing
---

<h1>Writing</h1>

<ul class="post-list">
{% for post in collections.writing %}
    <li>
        <article>
            <h3 class="post-title">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h3>
            <p class="post-meta">{{ post.date | date }}</p>
        </article>
    </li>
{% endfor %}
</ul>

{% if collections.writing.length == 0 %}
<p>No writing posts yet.</p>
{% endif %}